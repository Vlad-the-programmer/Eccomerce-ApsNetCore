@model EcommerceWebApp.Models.NewProductViewModel

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="row g-0">
            <div class="col-md-5 d-flex align-items-center">
                <img src="@Model.Photo" class="img-fluid rounded-start p-3" alt="@Model.Name">
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h2 class="card-title text-primary">@Model.Name</h2>
                    <h5 class="text-muted">Brand: <span class="fw-bold">@Model.Brand</span></h5>
                    <h4 class="text-success">@Model.Price.ToString("C")</h4>
                    <p class="card-text">@Model.LongAbout</p>
                    <p class="card-text text-muted"><strong>About:</strong> @Model.About</p>

                    <div class="d-flex align-items-center">
                        <span class="me-2">Status:</span>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">AVAILABLE</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">NOT AVAILABLE</span>
                        }
                    </div>

                    <div class="mt-4">
                        <a class="btn btn-outline-secondary me-2" asp-action="Index">Back to List</a>
                        <a class="btn btn-primary text-white @(Model.IsActive ? "" : "disabled")"
                           asp-controller="Cart"
                           asp-action="AddItemToCart"
                           asp-route-id="@Model.Id">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>