@model List<NewProductViewModel>


@{

    ViewData["Title"] = "List Of Products";
}
<div class="row">
    @if (Model == null)
    {
        <p>No data available.</p>
    } else {

    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @item.Name
                                    
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    }
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.Photo" width="100%" alt="@item.Name">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text">@item.LongAbout</p>
                            <p class="card-text"><b>Company: </b>@item.Brand</p>
                            <p class="card-text"><b>Category: </b>@item.</p>
                            @* <p class="card-text"><b>Manufactured Date: </b>@item.DateCr.ToString("dd MMM yy")</p> *@
                            @* <p class="card-text"><b>Exp Date: </b>@item.ExpiredDate.ToString("dd MMM yy")</p> *@
                            <p class="card-text ">
                                <b>Status: </b>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger text-white">Not Available</span>
                                }
                            </p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-success text-white @((!item.IsActive) ? " disabled" : "" )"
                                   asp-controller="Orders"
                                   asp-action="AddItemToShoppingCart"
                                   asp-route-id="@item.Id">
                                    <i class="bi bi-cart-plus"></i> Add to Cart (Rs. @item.Price.ToString(".00"))
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
   }
</div>

