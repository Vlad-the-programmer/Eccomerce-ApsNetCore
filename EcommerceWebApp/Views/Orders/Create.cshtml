@using Microsoft.AspNetCore.Http;
@using EcommerceWebApp.Helpers.Enums
@model OrderViewModel
@{
    Layout = "_OrderLayout";
}

<style>
    #formOverlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        backdrop-filter: blur(3px);
        background-color: rgba(255, 255, 255, 0.3);
        z-index: 999;
        pointer-events: all;
    }

    #orderForm {
        position: relative;
    }

        #orderForm:has(#formOverlay) {
            pointer-events: none;
        }

        #orderForm button[type="submit"]:disabled {
            cursor: not-allowed;
            opacity: 0.6;
        }
</style>

<script>
    function OnShippingUpdate() {
        if (document.getElementById('ShippingType').value == "2") {
            document.getElementById('info').style.display = "block";
        }
        else {
            document.getElementById('info').style.display = "none";
        }
    }
</script>
@section top {
    <div class="jumbotron">
        <h1 class="display-3 text-center">Order</h1>
    </div>
}

@if (ViewBag.CartItems == null || ViewBag.CartItems.Count == 0)
{
    <h2 class="text-info">Cart is empty</h2>
    <br />
    <a href="@Url.Action("index", "products")" class="btn btn-outline-primary btn-block btn-lg margin-mobile">Go back to store</a>
}
else
{
    @if (User.Identity.IsAuthenticated)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            Logged in as @User.Identity.Name! 
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    else
    {

        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <a href="@Url.Action("Login", "Account", new { ReturnUrl = Context.Request.Path + Context.Request.QueryString })" class="nounderline text-dark">
                Login to save your order.
            </a>

            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    
    <form method="post" id="orderForm">
        @if (!User.Identity.IsAuthenticated)
        {
            <div id="formOverlay"></div>
        }
        <input type="hidden" name="Code" asp-for="Code" />

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="FirstName">First Name</label>
                <input type="text" class="form-control" asp-for="Customer.FirstName" pattern=".{3,64}" required>
            </div>
            <div class="form-group col-md-6">
                <label for="LastName">Last Name</label>
                <input type="text" class="form-control" asp-for="Customer.LastName" pattern=".{3,64}" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Customer.Email" pattern=".{5,128}" required>
            </div>
            <div class="form-group col-md-6">
                <label for="Phone">Phone number</label>
                <input type="text" class="form-control" asp-for="Customer.PhoneNumber" pattern=".{7,16}" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="Street">Street</label>
                <input type="text" class="form-control" name="Customer.Street" asp-for="Customer.Street" required />
            </div>
            <div class="form-group col-md-2">
                <label for="HouseNumber">House #</label>
                <input type="text" class="form-control" asp-for="Customer.HouseNumber" required />
            </div>
            <div class="form-group col-md-2">
                <label for="FlatNumber">Flat #</label>
                <input type="text" class="form-control" asp-for="Customer.FlatNumber" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="City">City</label>
                <input type="text" class="form-control" asp-for="Customer.City" required />
            </div>
            <div class="form-group col-md-4">
                <label for="State">State/Province</label>
                <input type="text" class="form-control" asp-for="Customer.State" />
            </div>
            <div class="form-group col-md-4">
                <label for="PostalCode">Postal Code</label>
                <input type="text" class="form-control" asp-for="Customer.PostalCode" required />
            </div>
        </div>

        <div class="form-group">
            <label for="CountryName">Country</label>
            <select class="custom-select" asp-for="Customer.CountryName" required>
                <option value="">-- Select Country --</option>
                @foreach (var country in ViewBag.Countries)
                {
                    <option value="@country" selected="@(country == Model.Customer.CountryName)">
                        @country
                    </option>
                }
            </select>
        </div>

        <div class="row form-group">
           <div class="col-6">
    <select class="custom-select" onchange="OnShippingUpdate()"  asp-for="DeliveryMethod">
        <option value="">-- Select Delivery Method --</option>
        <option value="1" selected="@(Model.DeliveryMethod == DeliveryMethods.Courier)">Courier (+20 zł)</option>
        <option value="2" selected="@(Model.DeliveryMethod == DeliveryMethods.ParcelLocker)">Parcel Locker (+8,99 zł)</option>
        <option value="3" selected="@(Model.DeliveryMethod == DeliveryMethods.TakeAway)">Get a parcel yourself</option>
    </select>
</div>

            <div class="col-6">
                <select class="custom-select" asp-for="PaymentMethod">
                    <option value="1" selected="@(Model.PaymentMethod == PaymentMethods.Card)">Debit card</option>
                    <option value="2" selected="@(Model.PaymentMethod == PaymentMethods.Transaction)">Bank transaction</option>
                    <option value="3" selected="@(Model.PaymentMethod == PaymentMethods.Cash)">Pay with cash when getting the parcel</option>
                    <option value="4" selected="@(Model.PaymentMethod == PaymentMethods.PayPal)">PayPal</option>
                </select>
            </div>
        </div>
        @* <div class="form-group" id="info" style="display: none"> *@
        @*     <input type="text" class="form-control" name="Order.ShippingInfo" id="ShippingInfo" asp-for="@Model.Order.ShippingInfo" value="@Model.Order.ShippingInfo" placeholder="Kod paczkomatu" pattern=".{,64}" /> *@
        @* </div> *@
        @* <div class="form-group"> *@
        @*     <input type="text" class="form-control" name="Order.Comments" id="Comments" asp-for="@Model.Order.Comments" value="@Model.Order.Comments" placeholder="Uwagi do zamówienia" pattern=".{,2048}" /> *@
        @* </div> *@

        <div class="row" style="margin-top: 30px">
            <div class="col-sm-4">
                <a href="@Url.Action("index", "cart")" class="btn btn-outline-primary btn-block btn-lg margin-mobile">Get back to cart</a>
            </div>
            <div class="col-sm-8">
                <button type="submit" class="btn btn-success btn-block btn-lg margin-mobile" @(User.Identity.IsAuthenticated ? "" : "disabled")>
                    Submit order
                </button>
            </div>
        </div>
    </form>
}